<h1><%= @restaurant.name %></h1>

<h2>Address: <%=  @restaurant.address %></h2>
<h2>Phone number: <%=  @restaurant.phone_number %></h2>
<h2>Category: <%=  @restaurant.category %></h2>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>

<%= link_to('Back to restaurant', restaurant_path(@restaurant)) %>

<%= @restaurant.reviews.inspect%>
